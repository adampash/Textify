<?xml version="1.0" encoding="utf-8"?>
<!--- The default skin class for the Spark VScrollBar component. 

@see spark.components.WhiteScrollBar
@see spark.skins.spark.WhiteScrollBarThumbSkin
@see spark.skins.spark.WhiteScrollBarTrackSkin

@langversion 3.0
@playerversion Flash 10
@playerversion AIR 1.5
@productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
			 xmlns:fb="http://ns.adobe.com/flashbuilder/2009" width="18" minHeight="35" 
			 alpha.disabled="0.5" alpha.inactive="0.5" xmlns:mx="library://ns.adobe.com/flex/mx" >
	
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.VScrollBar")]
		]]>
	</fx:Metadata> 
	
	<fx:Script fb:purpose="styling">
		/* Define the skin elements that should not be colorized. 
		For scroll bar, the skin itself is colorized but the individual parts are not. */
		static private const exclusions:Array = ["track", "thumb", "decrementButton", "incrementButton"];
		
		/**
		 * @private
		 */
		override public function get colorizeExclusions():Array {return exclusions;}
		
		/**
		 * @private
		 */
		override protected function initializationComplete():void
		{
			useChromeColor = true;
			super.initializationComplete();
		}
		
	</fx:Script>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
		<s:State name="inactive" />
	</s:states>
	
	<!---  The default skin class is VScrollBarTrackSkin.  
	@copy spark.components.supportClasses.TrackBase#track 
	@see spark.skins.spark.VScrollBarTrackSkin -->
			
	<s:Button id="track" top="14" bottom="14" width="18"
			  focusEnabled="false"
			  skinClass="skins.WhiteScrollBar.WhiteScrollBarTrackSkin" />
	
	<!--- The default skin class is VScrollBarThumbSkin.
	@copy spark.components.supportClasses.TrackBase#thumb 
	@see spark.skins.spark.VScrollBarThumbSkin -->
	<s:Button id="thumb" width="12" left="3" 
			  focusEnabled="false" visible.inactive="false"
			  skinClass="skins.WhiteScrollBar.WhiteScrollBarThumbSkin" />
	
	<s:Button id="decrementButton" left="3"
			  focusEnabled="false" visible.inactive="false"
			  skinClass="skins.WhiteScrollBar.WhiteScrollBarUpSkin" top="5"
			   />
	
	<s:Button id="incrementButton" left="3"
			  focusEnabled="false" visible.inactive="false"
			  skinClass="skins.WhiteScrollBar.WhiteScrollBarDownSkin"  left.normal="3" bottom="-10"
			  />
	
	
</s:SparkSkin>